<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/ic_default_app_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/px_35"
        android:textSize="@dimen/text_h1_size"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="免费注册"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_wo_erweima"
                android:layout_marginTop="@dimen/px_36"
                android:layout_width="@dimen/px_176"
                android:layout_height="@dimen/px_176"
                android:background="@drawable/ic_erweima_bg"
                android:src="@drawable/ic_erweima_app"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_6"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="沃管车公众号"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_16"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="①扫描沃管车公众号 \n 注册并登陆沃管车企业账号  \n 已有账号跳过此步骤"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_imei_erweima"
                android:layout_marginTop="@dimen/px_36"
                android:layout_width="@dimen/px_176"
                android:layout_height="@dimen/px_176"
                android:background="@drawable/ic_erweima_bg"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_6"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="设备二维码"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_16"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="②在终端管理选择新增 \n 扫描设备二维码  \n 添加设备到沃管车平台"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_66"
        android:layout_marginRight="@dimen/px_66"
        android:padding="@dimen/px_26"
        android:layout_marginTop="@dimen/px_40"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_h2_size"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/shape_white_trans_bg"
        android:text="扫描二维码注册实现车队管理"/>

</LinearLayout>