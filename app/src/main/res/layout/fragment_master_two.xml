<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:background="@drawable/ic_default_app_bg">



    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/px_16"
            android:layout_width="@dimen/img_h1_size"
            android:layout_height="@dimen/img_h1_size"
            android:src="@drawable/ic_location"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_h1_size"
            android:layout_marginTop="@dimen/px_50"
            android:layout_marginBottom="@dimen/px_50"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="车辆异动，随时提醒"/>
        <TextView
            android:layout_marginTop="@dimen/px_26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_16"
            android:layout_marginRight="@dimen/px_16"
            android:textSize="@dimen/text_h2_size"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/shape_white_trans_bg"
            android:padding="@dimen/px_26"
            android:text="不论你身在何处，当车辆异常移动、异常震动时，你都会第一时间收到报警。"/>
    </LinearLayout>
</RelativeLayout>
